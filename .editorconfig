# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Default to tab indents
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab

# Markdown files
[*.md]
charset = utf-8
indent_style = space
indent_size = 2

# Yaml files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
